<!DOCTYPE html>
<html>
<head>
  <title>Early Readiness System</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">
  Early Readiness High School Graduation Option
</a>
<% if !session[:eid].nil? %>

<ul class="nav pull-right">
  
  <% if can? :manage, Student %>
  <li class="divider-vertical"></li>
  <li><%= link_to 'Dashboard', students_path %></li>
  <% end %>

  <li class="divider-vertical"></li>
  <li><%= link_to 'Logout ' + session[:eid], log_out_path%></li>
</ul>
<% end %>
    </div>
</div>
</div>
<div class="container">
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
  </div>
<% end %>

<div class="content">
<%= yield %>
</div>
</div>

<script type="text/javascript">
$(document).ready(
    function(){
      $(".btn-group label").addClass('btn');
    }
  );
</script>
</body>
</html>
