<h1>Listing question_responses</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Student</th>
    <th>Question</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @question_responses.each do |question_response| %>
  <tr>
    <td><%= question_response.text %></td>
    <% if question_response.student.nil? %>
    <td>error</td>
    <% else %>
    <td><%= question_response.student.name %></td>
    <% end %>
    <% if question_response.question.nil? %>
    <td>&nbsp;</td>
    <% else %>
    <td><%= question_response.question.text %></td>
    <% end %>
    <td><%= link_to 'Show', question_response %></td>
    <td><%= link_to 'Edit', edit_question_response_path(question_response) %></td>
    <td><%= link_to 'Destroy', question_response, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

