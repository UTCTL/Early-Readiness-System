<h1>Listing scores</h1>

<table>
  <tr>
    <th>Student score</th>
    <th>Student</th>
    <th>Exam</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scores.each do |score| %>
  <tr>
    <td><%= score.student_score %></td>
    <td>
      <% if score.student %>
      <%= score.student.name %>
      <% end %> </td>
    <td>
      <% if score.exam.name %> 
      <%= score.exam.name %>
      <% end %>
    </td>
    <td><%= link_to 'Show', score %></td>
    <td><%= link_to 'Edit', edit_score_path(score) %></td>
    <td><%= link_to 'Destroy', score, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

