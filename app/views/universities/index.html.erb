<h1>Listing universities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Short Name</th>
    <th>Section</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @universities.each do |university| %>
  <tr>
    <td><%= university.name %></td>
    <td><% if university.shortname %><%= university.shortname %><% end %></td>
    <% if university.section %>
    <td><%= university.section.title %> </td>
    <% else %>
    <td></td>
    <% end %>
    <td><%= link_to 'Show', university %></td>
    <td><%= link_to 'Edit', edit_university_path(university) %></td>
    <td><%= link_to 'Destroy', university, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

