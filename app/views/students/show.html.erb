<p id="notice"><%= notice %></p>

 <div class="student">
    <nav class="student_controls">
    <ul>
    <li><%= link_to 'Show', @student %></li>
    <li><%= link_to 'Edit', edit_student_path(@student) %></li>
    <li><%= link_to 'Destroy', @student, confirm: 'Are you sure?', method: :delete %></li>
    </ul>
  </nav>
  <h2 class="student_name"><%= link_to @student.name, @student %></h2><h3 class="student_eid"><% if @student.eid %><%= @student.eid %><% end %></h3>
  <div class="clear"></div>
  <div class="student_address">
    <p><%= @student.address1 %><br/>
        <% if @student.address2? %> 
        <%= @student.address2 %><br/>
        <% end %>
        <%= @student.city %>, <%= @student.state %> <%= @student.zip %>
    </p>
    <span class-"student_residency"><strong>Residency:</strong> <%= @student.residency %></span>
</div>
<div class="student_demographics">
    <div class="student_birthdate"><p><%= @student.birthday.to_formatted_s(:long_ordinal) %></p></div>
    <% if @student.gender %>
    <div class="student_gender">
      <%= link_to @student.gender.gender, @student.gender %>
    </div>
    <% end %>
    <div class="student_highschool"><p><%= @student.highschool %></p></div>
</div>
<div class="student_universities">
  <% if @student.universities %>
    <% @student.universities.each do |university| %>
      <div class="<%= university.name %>"><%= link_to 'Interested in' + university.name, university %></div>
    <% end %>
   <% end %>
</div>
<div class="exams">
  <h3>Exam scores</h3>

<table>
  <tr>
    <th>Subject</th>
    <th>Exam</th>
    <th>Required Score</th>
 
  </tr>

<% @student.exams.each do |exam| %>
  <tr>
    <% if exam.subtopic %>
      <td><%= exam.subject.name + ' ' + exam.subtopic.name %></td>
    <% else %>
      <td><%= exam.subject.name  %></td>
    <% end %>
    <td><%= exam.name %></td>
    <td><%= exam.required_score %></td>

  
  </tr>
<% end %>
</table>
</div>
<div class="clear"></div>
    <span class="email"><a href="mailto:<%= @student.email %>"><%= @student.email %></a></span>
    
<div class="student_responses">
<% @question_responses.each do |response| %>
<div class="question_response">
<strong><%= response.question.text %></strong><br/>
<%= response.text %>
</div>
<% end %>
</div>
    <div class="clear"></div>
  
    </div>

